extends layout 

block content
  h1= title
  header

    a.button(href='/') Home 

    .search 
        form(action='/books/search', method='get')
            input(name="search", type="text",  placeholder="Search Books")
            input#search(type="submit" value="Search")

    table 
        thead 
            tr 
                th Title 
                th Author 
                th Genre 
                th Year 
            tbody 
            each book in books 
                tr 
                    td 
                        a(href='/books/' + book.id)= book.title 
                    td= book.author 
                    td= book.genre 
                    td= book.year 
    - var n = 1;
    - var isActive; 
    footer 
        while n <= pages 
            - isActive = activePage == n;
            a.pages(href=`/books/page_:${n}` class= isActive ? 'active' : '')= n 
            - n++