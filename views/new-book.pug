extends layout

block content 
    h1= title  

    include errors 

    form(action="/books/new", method="post") 
        p
            label(for="title") Title 
            input#title(name="title" type="text" placeholder="title")
        p
            label(for="author") Author 
            input#author(name="author" type="text" placeholder="author")
        p 
            label(for="genre") Genre 
            input#genre(name="genre" type="text" placeholder="genre")
        p 
            label(for="year") Year 
            input#year(name="year" type="text" placeholder="year")
        p 
            input(type="submit", value="Create New Book")
        p 
            a.button#cancel(href='/books') Cancel